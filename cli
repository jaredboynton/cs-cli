#!/bin/bash

# Customer Transcripts CLI - Runtime Script
# Executes the CS-CLI tool for extracting customer communications

set -e

# Colors for output
RED='\033[0;31m'
NC='\033[0m' # No Color

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

# Check if uv is available and dependencies are installed
if ! command -v uv &> /dev/null; then
    echo -e "${RED}Error: uv is not installed.${NC}"
    echo "Please run the installer first:"
    echo "  curl -fsSL https://raw.githubusercontent.com/jaredboynton/cs-cli/main/install.sh | bash"
    exit 1
fi

# Check if uv.lock exists (indicates dependencies are installed)
if [ ! -f "uv.lock" ]; then
    echo -e "${RED}Error: Dependencies not installed.${NC}"
    echo "Please run the installer first:"
    echo "  curl -fsSL https://raw.githubusercontent.com/jaredboynton/cs-cli/main/install.sh | bash"
    exit 1
fi

# Runtime checks and CLI execution
# Ensure dependencies are synced (quietly during normal operation)
uv sync --quiet >/dev/null 2>&1 || {
    echo "Warning: Failed to sync dependencies" >&2
}

# Install the local package in development mode if needed
if ! uv run python -c "import team_calls" >/dev/null 2>&1; then
    uv pip install -e . --quiet >/dev/null 2>&1 || {
        echo "Warning: Failed to install local package" >&2
    }
fi

# Execute the CLI
exec uv run python -m team_calls.cli "$@"
